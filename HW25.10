}

/*Завдання 3. Написати функцію, яка вставляє в рядок у
зазначену позицію заданий символ.*/

void insert_char(char*& arr, size_t& n, size_t ind, char char_to_insert)
{
    if (ind > n) {
        cout << "Error"<< endl;
        return;
    }
    size_t new_size = n + 1;
    char* new_arr = new char[new_size + 1];
    for (size_t i = 0; i < ind; ++i)
    {
        new_arr[i] = arr[i];
    }

    new_arr[ind] = char_to_insert;
    for (size_t i = ind; i < n; ++i)
    {
        new_arr[i + 1] = arr[i];
    }
    new_arr[new_size] = '\0';
    delete[] arr;
    arr = new_arr;
    n = new_size;
}

