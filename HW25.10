/*Завдання 1. Написати функцію, яка видаляє з рядка символ із заданим номером.*/
void print_array(const int* arr, int n)
{
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << ' ';
    }
    cout << endl;
}

void remove_element_by_index(int*& arr, int& n, int index) {
    if (n == 1) {
        cout << "Element removed. Array is now empty." << endl;
        delete[] arr;
        arr = nullptr;
        n = 0;
        return;
    }
    int new_size = n - 1;
    int* new_arr = new int[new_size];
    if (index > 0) {
        copy(arr, arr + index, new_arr);
    }
    if (index < new_size) {
        copy(arr + index + 1, arr + n, new_arr + index);
    }
    delete[] arr;
    arr = new_arr;
    n = new_size;
}

#include <iostream>
using namespace std;
#include "Header.h"
#include <algorithm>

int main()
{
    int size = 6;
    int* dynamic_array = new int[size] {33, 44, 7, 8, 9, 5};
    int index_to_remove;

    print_array(dynamic_array,size);

    cout << "Enter the index of the element to be removed" <<endl;
    if (!(cin >> index_to_remove)) {
        cerr << "Invalid input. Exiting." << endl;
        delete[] dynamic_array;
        return 1;
    }
    remove_element_by_index(dynamic_array,size,index_to_remove);
    print_array(dynamic_array, size);
    delete[] dynamic_array;

    return 0;
}

/*Завдання 2. Написати функцію, яка видаляє з рядка всі
входження в нього заданого символу.*/
void static remove_char(char*& arr, int& n, char char_to_remove)
{
    int new_size = 0;
    for (int i = 0; i < n; ++i)
    {
        if (arr[i] != char_to_remove)
        {
            new_size++;
        }
    }
    if (new_size == 0)
    {
        if (arr != nullptr)
        {
            delete[] arr;
            arr = nullptr;
        }
        n = 0;
        return;
    }

    char* new_arr = new char[new_size + 1];
    int write_index = 0;
    for (int i = 0; i < n; ++i)
    {
        if (arr[i] != char_to_remove)
        {
            new_arr[write_index++] = arr[i];
        }
    }
    new_arr[new_size] = '\0';
    delete[] arr;
    arr = new_arr;
    n = new_size;
}
#include <iostream>
#include <stdlib.h>
#include <ctime>
using namespace std;
#include "Header.h"
#include <algorithm>

int main() {
    const char* temp_str = "A,B,C,D,E";
    int str_len = strlen(temp_str);
    char* char_arr = new char[str_len + 1];
    for (int i = 0; i <= str_len; ++i) 
    {
        char_arr[i] = temp_str[i];
    }

    cout << "Original string " << char_arr << " (The length: " << str_len << ")" << endl;

    remove_char(char_arr, str_len, 'A');

    cout << "The string after delition',': " << char_arr << " (New length: " << str_len << ")" << endl;

    if (char_arr != nullptr) {
        delete[] char_arr;
        char_arr = nullptr;
    }
    return 0;
}

