/*Завдання 4. Зробити динамічний двовимірний масив, та функцію, яка виводить його
у консоль та функцію яка знаходить мінімум та максимум в цьому масиві*/


void MaxMin(int** const arr, int rows, int cols, int& max, int& min)
{
    max = arr[0][0];
    min = arr[0][0];

    for (int i = 0; i < rows; ++i)
    {
        for (int j = 0; j < cols; ++j)
        {
            if (arr[i][j] > max)
            {
                max = arr[i][j];
            }
            if (arr[i][j] < min) 
            {
                min= arr[i][j];
            }
        }
    }
}

