/*Завдання 1. Написати функцію, яка видаляє з рядка символ із заданим номером.*/
void print_array(const int* arr, int n)
{
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << ' ';
    }
    cout << endl;
}

void remove_element_by_index(int*& arr, int& n, int index) {
    if (n == 1) {
        cout << "Element removed. Array is now empty." << endl;
        delete[] arr;
        arr = nullptr;
        n = 0;
        return;
    }
    int new_size = n - 1;
    int* new_arr = new int[new_size];
    if (index > 0) {
        copy(arr, arr + index, new_arr);
    }
    if (index < new_size) {
        copy(arr + index + 1, arr + n, new_arr + index);
    }
    delete[] arr;
    arr = new_arr;
    n = new_size;
}

#include <iostream>
using namespace std;
#include "Header.h"
#include <algorithm>

int main()
{
    int size = 6;
    int* dynamic_array = new int[size] {33, 44, 7, 8, 9, 5};
    int index_to_remove;

    print_array(dynamic_array,size);

    cout << "Enter the index of the element to be removed" <<endl;
    if (!(cin >> index_to_remove)) {
        cerr << "Invalid input. Exiting." << endl;
        delete[] dynamic_array;
        return 1;
    }
    remove_element_by_index(dynamic_array,size,index_to_remove);
    print_array(dynamic_array, size);
    delete[] dynamic_array;

    return 0;
}

